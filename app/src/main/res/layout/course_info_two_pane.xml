<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.tyagiabhinav.udacitycourseviewer.ui.courseList.CourseListActivity">

    <!--
    This layout is a two-pane layout for the Restaurants
    master/detail flow.
    See res/values-large/refs.xml and
    res/values-w820dp/refs.xml for an example of layout aliases
    that replace the single-pane version of the layout with
    this two-pane version.
-->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/courseListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scrollbars="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:context=".ui.courseList.CourseListFragment"
        tools:listitem="@layout/course_list_content" />

    <FrameLayout
        android:id="@+id/course_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
